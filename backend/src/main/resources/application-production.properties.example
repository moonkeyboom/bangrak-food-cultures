# Production Configuration for Render + Supabase
# คัดลอกไฟล์นี้เป็น application-production.properties และแก้ค่าจริง

# ========================================
# DATABASE CONFIGURATION (Supabase)
# ========================================
spring.datasource.url=jdbc:postgresql://db.xxx.supabase.co:5432/postgres
spring.datasource.username=postgres
spring.datasource.password=your-supabase-db-password
spring.datasource.driver-class-name=org.postgresql.Driver

# HikariCP Connection Pool (สำคัญสำหรับ Supabase Free Tier - 60 connections)
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.max-lifetime=1800000

# ========================================
# JPA / HIBERNATE
# ========================================
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=false

# ========================================
# SERVER CONFIGURATION
# ========================================
server.port=${PORT:8080}
server.error.include-message=never
server.error.include-binding-errors=never

# ========================================
# CORS (Cloudflare Pages)
# ========================================
cors.allowed-origins=https://bangrak-food-cultures.pages.dev,https://your-custom-domain.com
cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
cors.allowed-headers=*
cors.allow-credentials=true
cors.max-age=3600

# ========================================
# ADMIN SECURITY
# ========================================
admin.password=your-strong-admin-password-here

# ========================================
# LOGGING
# ========================================
logging.level.root=INFO
logging.level.com.bangrak.foodcultures=INFO
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
